= form_tag search_products_path, method: :get, class: 'navbar-form navbar-right search-products', role: 'search', id: 'search_form' do
  .input-group.input-group-sm
    = text_field_tag :search, params[:search], { class: 'form-control search', required: true, placeholder: 'search title' }
    .input-group-append
      = button_tag( type: 'submit', class: 'btn btn-transparent' ) do
        %i.fas.fa-search
