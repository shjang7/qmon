.main-page
  .header-bar
    .input search
    - if merchandiser_signed_in?
      = link_to 'Add product', new_product_path, class: 'btn btn-orange'
      = link_to 'Logout', destroy_merchandiser_session_path, method: :delete, class: 'btn btn-orange'
    - if customer_signed_in?
      = link_to 'Logout', destroy_customer_session_path, method: :delete, class: 'btn btn-orange'
    - else
      = link_to 'Registration', static_pages_signup_path, class: 'btn btn-orange'
      = link_to 'SignIn', new_customer_session_path, class: 'btn btn-orange'
    %button.btn.btn-orange cart
  .category
    - category_names.each do |name|
      = link_to name.capitalize, products_path(category: name), class: 'btn btn-secondary'
  .ad-image-animation
  .product-list
    = render @products
= render 'popover'
= render 'sample_colors'
