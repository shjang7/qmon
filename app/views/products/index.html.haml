.main-page
  .header-bar
    .brand QMON
    .input search
    - if merchandiser_signed_in?
      = link_to 'Add product', new_product_path, class: 'btn btn-orange'
      = link_to 'Logout', destroy_merchandiser_session_path, method: :delete, class: 'btn btn-orange'
    - else
      = link_to 'Registration', static_pages_signup_path, class: 'btn btn-orange'
      = link_to 'SignIn', new_merchandiser_session_path, class: 'btn btn-orange'
    %button.btn.btn-orange cart
  .category
    %ul
      %li Best
      %li Health
      %li Spring
      %li Fashion
      %li Travel
      %li Beauty
  .ad-image-animation
  .product-list
    = render @products
= render 'popover'
= render 'sample_colors'
